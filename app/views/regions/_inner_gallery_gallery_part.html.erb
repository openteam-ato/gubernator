<div class="images">
  <h1><%= object.title %></h1>

  <% object.gallery_pictures.each do |picture| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to (image_tag picture.picture_url.sub(/\d+-\d+/,"230-230!n"), :size => '230x230', :class => 'img-responsive'),
        picture.picture_url, :class => 'thumbnail js-colorbox', :rel => 'colorbox', :title => picture.description.present? ? picture.description : nil %>
    </div>
  <% end  %>
</div>
