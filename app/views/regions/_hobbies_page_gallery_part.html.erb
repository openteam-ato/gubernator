<div class="images">
  <h1><%= link_to object.title, "#{request.path}/#{from_russian_to_param(object.title)}" %></h1>

  <% object.gallery_pictures.each do |picture| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to "#{request.path}/#{from_russian_to_param(object.title)}", :class => 'thumbnail img-responsieve' do %>
        <%= image_tag picture.picture_url.sub(/\/\d+-\d+\//, '/230-230!n/'), :size => '230x230', :class => 'img-responsive', :alt => picture.description %>
      <% end %>
    </div>
  <% end  %>
</div>
