<% content_for :page_title, strip_tags(object.title).squish %>

<div class="news_item_wrapper">
  <div class="row item">
    <div class="col-sm-2 hidden-xs date"><%= l Date.parse(object.since), :format => :custom %></div>
    <div class="col-xs-12 col-sm-10 entry">
      <div class="title">
        <%= strip_tags(object.title) %>
        <p class='visible-xs date'>
          <%= l Date.parse(object.since), :format => :custom %>
        </p>
      </div>

      <div class="text">
        <%= raw object.body %>
      </div>

      <div class="images row">
        <% if object.images.any? %>
          <% object.images.each do |photo| %>
            <div class="col-xs-6 col-md-3">
              <%= link_to photo.url, :class => 'thumbnail js-colorbox', :rel => 'colorbox' do %>
                <%= image_tag (photo.thumbnail.try(&:url).try(:sub, /\d+-\d+/,"230-230!n") || photo.url), :class => 'img-responsive' %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
      <script type="text/javascript" src="//yastatic.net/share/share.js" charset="utf-8"></script>
      <div class="yashare-auto-init" data-yashareL10n="ru" data-yashareType="none" data-yashareQuickServices="vkontakte,facebook,twitter,lj"></div>
    </div>
  </div>
</div>
